@model MVCRoulette.Models.Users

@{
    Layout = null;
    if (Session["UserID"] == null)
    {
        Response.Redirect("~/Login/Login");
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Main Menu</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div> 
        <h3> User : @Session["Username"].ToString()</h3>
        <a href="@Url.Action("Logout", "Login")">Logout</a>
    </div>
    <div class="jumbotron text-center">
        <h1>Roulette</h1>
        <h2>Main Menu</h2>
        <p class="lead">Your balance is : @Session["Balance"].ToString()</p>
        <p class="lead">Attempts : @Session["Attempts"].ToString() </p>
        <p class="lead">Please pick your bet.</p>
    </div>
    <div class="container">
        <div class="row">
            <div class="col text-center">
                @using (Html.BeginForm("ButtonRed", "Main_menu", FormMethod.Post))
                {
                    <input type="submit" value="Red" name="action:Red" class="btn btn-danger btn-lg" role="button" />
                }
                @using (Html.BeginForm("ButtonWhite", "Main_menu", FormMethod.Post))
                {
                    <input type="submit" value="White" name="action:White" class="btn btn-light btn-lg" role="button" />
                }
                @using (Html.BeginForm("ButtonBlack", "Main_menu", FormMethod.Post))
                {
                    <input type="submit" value="Black" name="action:Black" class="btn btn-dark btn-lg" role="button" />
                }
                @using (Html.BeginForm("ButtonGreen", "Main_menu", FormMethod.Post))
                {
                    <input type="submit" value="Green" name="action:Green" class="btn btn-success btn-lg" role="button" />
                }
                @using (Html.BeginForm("ButtonEven", "Main_menu", FormMethod.Post))
                {
                    <input type="submit" value="Even" name="action:Even" class="btn btn-info btn-lg" role="button" />
                }
                @using (Html.BeginForm("ButtonOdd", "Main_menu", FormMethod.Post))
                {
                    <input type="submit" value="Odd" name="action:Odd" class="btn btn-warning btn-lg" role="button" />
                }
                @using (Html.BeginForm("ButtonFH", "Main_menu", FormMethod.Post))
                {
                    <input type="submit" value="First Half" name="action:First Half" class="btn btn-secondary btn-lg" role="button" />
                }
                @using (Html.BeginForm("ButtonSH", "Main_menu", FormMethod.Post))
                {
                    <input type="submit" value="Second Half" name="action:Second Half" class="btn btn-primary btn-lg" role="button" />
                }
            </div>
        </div>
    </div>
</body>
</html>
